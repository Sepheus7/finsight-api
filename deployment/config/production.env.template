# FinSight Production Environment Configuration
# Copy this file to .env.production and fill in your values

# =============================================================================
# AWS Configuration
# =============================================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# Bedrock Configuration
BEDROCK_MODEL_ID=anthropic.claude-3-haiku-20240307-v1:0
BEDROCK_REGION=us-east-1

# =============================================================================
# API Configuration
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# CORS Configuration
CORS_ORIGINS=["https://yourdomain.com", "https://www.yourdomain.com"]

# =============================================================================
# External API Keys
# =============================================================================
# FRED API (Federal Reserve Economic Data)
FRED_API_KEY=your_fred_api_key_here

# Alpha Vantage (Alternative financial data)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# =============================================================================
# Database Configuration (if using)
# =============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/finsight
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/var/log/finsight/app.log

# =============================================================================
# Security Configuration
# =============================================================================
SECRET_KEY=your_secret_key_for_sessions
JWT_SECRET=your_jwt_secret_here
RATE_LIMIT_PER_MINUTE=100

# =============================================================================
# Monitoring & Observability
# =============================================================================
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# CloudWatch Configuration
CLOUDWATCH_LOG_GROUP=/aws/lambda/finsight
CLOUDWATCH_REGION=us-east-1

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true
ENABLE_REQUEST_LOGGING=true
ENABLE_MCP_SERVER=true

# =============================================================================
# Performance Configuration
# =============================================================================
REQUEST_TIMEOUT=30
MAX_CONCURRENT_REQUESTS=100
CACHE_TTL=300

# =============================================================================
# MCP Server Configuration
# =============================================================================
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=8001
MCP_PROTOCOL_VERSION=2024-11-05 